@model CalculinWebCore.ViewModels.RegisterViewModel
<div class="row"><br></br></div>
<div class="col-sm-4 col-sm-offset-4">
    <form asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-action="Register" method="post" role="form">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@

        <label class="control-label">Nick Name</label>
        <input asp-for="Nick" class="form-control" required/>
        <span asp-validation-for="Nick" class="text-danger"></span>

        <label class="control-label">Email</label>
        <input asp-for="Email" class="form-control" required/>
        <span asp-validation-for="Email" class="text-danger"></span>

        <label class="control-label">Password</label>
        <input asp-for="Password" class="form-control" required 
        title="La contraseña tiene que ir con mayusculas minusculas numeros y caracteres especiales y ser mayor de 6 y menor de 100 caracteres." 
        pattern="(?=^.{8,}$)((?=.*\d)(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"/>
        <span asp-validation-for="Password" class="text-danger"></span>

        <label class="control-label">ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="form-control" required/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <label class="control-label">FechaNacimiento</label>
        <input asp-for="FechaNacimiento" type="date" class="form-control" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>

        <label class="control-label">Pais</label>
        <select asp-for="IdPais"
                asp-items="@(new SelectList(@Model.Paises,"Id", "Nombre"))" class="form-control"></select>
        <br />
        <button type="submit" class="btn btn-success btn-block">Registrarse</button>

    </form>
</div>
<div class="row"></div>